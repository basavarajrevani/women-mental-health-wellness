  "shortcuts": [
    {
      "name": "Track Mood",
      "short_name": "Mood",
      "description": "Quick mood tracking entry",
      "url": "/health-tracker",
      "icons": [
        {
          "src": "/icons/mood-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "View Progress",
      "short_name": "Progress",
      "description": "Check your mental health progress",
      "url": "/progress",
      "icons": [
        {
          "src": "/icons/progress-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Community",
      "short_name": "Community",
      "description": "Connect with the support community",
      "url": "/community",
      "icons": [
        {
          "src": "/icons/community-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Crisis Help",
      "short_name": "Crisis",
      "description": "Get immediate crisis support",
      "url": "/resources?crisis=true",
      "icons": [
        {
          "src": "/icons/crisis-icon.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Dashboard view showing mental health progress"
    },
    {
      "src": "/screenshots/mobile-mood.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Mobile mood tracking interface"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+mhwellness",
      "url": "/handle?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/*"]
        }
      ]
    }
  }
}
